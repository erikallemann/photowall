example.com {
    encode zstd gzip

    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        Referrer-Policy "no-referrer"
        X-Content-Type-Options "nosniff"
    }

    @upload {
        path /upload
    }
    handle @upload {
        reverse_proxy 127.0.0.1:8081 {
            header_up X-Upload-Pin "${UPLOAD_PIN}"
        }
    }

    handle {
        reverse_proxy 127.0.0.1:8081
    }
}
